<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    
    
    <div class="container">
        <div class="container" id="err"></div>
        <div class="container" id="success"></div>
        <style>
            body{
                background-color: #111;
                color: aliceblue;
            }
            </style>
    
    <form action="/api/add/images" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Month Id</label>
            <input type="number" class="form-control" name="id" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Month Name</label>
            <input type="text" class="form-control" name="name" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Image Link</label>
            <input type="text" class="form-control" name="link" id="exampleInputPassword1">
        </div>
        <% if(error){ %>
            <p><%= error %></p>
            <% } %>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <br>
        <br>

        <a type="submit" href="/view" class="btn btn-primary">View Images</a>

    </div>

    <script>
        const searchParams = new URLSearchParams(window.location.search);
        if( searchParams.has('err')){
            let err = document.getElementById("err")
            err.innerHTML =     ` <div class="alert alert-danger ">${searchParams.get('err')}</div>` 

        }
        if( searchParams.has('success')){
            let err = document.getElementById("success")
            err.innerHTML =     ` <div class="alert alert-success ">${searchParams.get('success')}</div>` 

        };
    </script>
</body>
</html>
